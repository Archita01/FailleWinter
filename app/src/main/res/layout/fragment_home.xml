<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    tools:context=".fragment.HomeFragment">

    <ImageButton
        android:id="@+id/hamburgerImageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_hamburger"
        android:layout_marginStart="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/navigation_drawer"
        style="?android:attr/borderlessButtonStyle"
        />

    <TextView
        android:id="@+id/homeStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:text="Start"
        android:textSize="70sp"
        android:textColor="#194D82"
        android:fontFamily="@font/sacramento"/>

    <TextView
        android:id="@+id/startTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="254dp"
        android:fontFamily="@font/poppins_light"
        android:textStyle="bold"
        android:text="Stop accidents before they stop you"
        android:textColor="#0B2C4D"
        android:textSize="18sp" />

</RelativeLayout>